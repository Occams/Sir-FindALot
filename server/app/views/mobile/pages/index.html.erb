									<%= image_tag 'mobile/sir_options.png', :id => 'img_carl', :alt => "Carl and Sir FindALot" %>
								</div>
								
								<ul id="options_list">
									<li id ="auto_geo_slide">
										<div class="switch" fake-active="yes">
											<label class="disable" rel="slide1">Auto</label>
											<label class="enable selected" rel="slide1">Off</label>
											<div class="slide selected" id="slide1">Geolocation</div>
										</div>
									</li>
								</ul>
								<div class="button" id="purge_data">Purge Data</div>
							</div>
						</div>
						<footer>
							<nav class="navbar">
								<a href="#home" fake-active="yes">
